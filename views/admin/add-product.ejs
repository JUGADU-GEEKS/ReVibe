<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product - EcoFashion Admin</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <style>
        :root {
            --dark-bg: #0f0f13;
            --dark-card: #1a1a22;
            --accent-green: #4caf50;
            --accent-teal: #009688;
            --text-primary: #ffffff;
            --text-secondary: #b0b0b0;
            --input-bg: #252530;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-primary);
            font-family: 'Segoe UI', system-ui, sans-serif;
            min-height: 100vh;
            overflow-x: hidden;
            perspective: 1000px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1rem;
            position: relative;
            z-index: 10;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 1.5rem;
            font-weight: bold;
            color: var(--text-primary);
            background: linear-gradient(to right, var(--accent-green), var(--accent-teal));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 2rem;
            text-align: center;
            justify-content: center;
        }

        .form-container {
            max-width: 600px;
            margin: 4rem auto;
            padding: 2.5rem;
            border-radius: 15px;
            background: var(--dark-card);
            box-shadow: 0 15px 25px rgba(0, 0, 0, 0.3);
            transform-style: preserve-3d;
            transform: perspective(1000px);
            transition: transform 0.3s, box-shadow 0.3s;
            overflow: hidden;
            position: relative;
        }

        .form-container:hover {
            transform: perspective(1000px) translateY(-5px);
            box-shadow: 0 20px 30px rgba(0, 0, 0, 0.4);
        }

        .form-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .form-title {
            font-size: 2.2rem;
            margin-bottom: 1rem;
            background: linear-gradient(to right, var(--accent-green), var(--accent-teal));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .form-subtitle {
            color: var(--text-secondary);
            font-size: 1rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
            position: relative;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            color: var(--text-primary);
            font-weight: 500;
        }

        .form-icon {
            position: absolute;
            left: 1rem;
            top: 2.8rem;
            color: var(--text-secondary);
        }

        .form-control {
            width: 100%;
            padding: 0.8rem 1rem;
            padding-left: 2.5rem;
            background-color: var(--input-bg);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            color: var(--text-primary);
            transition: all 0.3s;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--accent-green);
            box-shadow: 0 0 0 2px rgba(76, 175, 80, 0.2);
        }

        .form-control::placeholder {
            color: var(--text-secondary);
            opacity: 0.7;
        }

        .form-select {
            width: 100%;
            padding: 0.8rem 1rem;
            padding-left: 2.5rem;
            background-color: var(--input-bg);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            color: var(--text-primary);
            transition: all 0.3s;
            appearance: none;
        }

        .form-select:focus {
            outline: none;
            border-color: var(--accent-green);
            box-shadow: 0 0 0 2px rgba(76, 175, 80, 0.2);
        }

        .select-arrow {
            position: absolute;
            right: 1rem;
            top: 2.8rem;
            color: var(--text-secondary);
            pointer-events: none;
        }

        .input-group {
            position: relative;
            display: flex;
        }

        .input-group-text {
            padding: 0.8rem 1rem;
            background-color: rgba(76, 175, 80, 0.2);
            color: var(--accent-green);
            border: 1px solid rgba(76, 175, 80, 0.3);
            border-right: none;
            border-radius: 8px 0 0 8px;
        }

        .input-group .form-control {
            border-radius: 0 8px 8px 0;
            padding-left: 1rem;
        }

        .file-input-container {
            position: relative;
            overflow: hidden;
            margin-top: 0.5rem;
        }

        .file-input-label {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.8rem 1.5rem;
            background: linear-gradient(to right, var(--accent-green), var(--accent-teal));
            color: white;
            border-radius: 8px;
            cursor: pointer;
            transition: transform 0.3s, box-shadow 0.3s;
            font-weight: 500;
            text-align: center;
            justify-content: center;
        }

        .file-input-label:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(76, 175, 80, 0.3);
        }

        .file-input {
            position: absolute;
            top: 0;
            left: 0;
            opacity: 0;
            width: 100%;
            height: 100%;
            cursor: pointer;
        }

        .file-name {
            margin-top: 0.5rem;
            font-size: 0.9rem;
            color: var(--text-secondary);
            text-align: center;
        }

        .btn-submit {
            width: 100%;
            padding: 1rem;
            background: linear-gradient(to right, var(--accent-green), var(--accent-teal));
            border: none;
            border-radius: 8px;
            color: white;
            font-weight: bold;
            cursor: pointer;
            transition: transform 0.3s, box-shadow 0.3s;
            font-size: 1.1rem;
            margin-top: 1rem;
        }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(76, 175, 80, 0.3);
        }

        .back-button {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--text-secondary);
            text-decoration: none;
            margin-bottom: 1.5rem;
            transition: color 0.3s;
        }

        .back-button:hover {
            color: var(--accent-green);
        }

        /* Background elements */
        .scene {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 0;
            overflow: hidden;
        }

        .air-particle {
            position: absolute;
            border-radius: 50%;
            background: rgba(76, 175, 80, 0.1);
            filter: blur(8px);
        }

        .cube {
            position: absolute;
            width: 100px;
            height: 100px;
            transform-style: preserve-3d;
            opacity: 0.1;
        }

        .cube-face {
            position: absolute;
            width: 100%;
            height: 100%;
            border: 1px solid var(--accent-green);
            backface-visibility: visible;
        }

        .glow {
            position: fixed;
            width: 50vw;
            height: 50vh;
            border-radius: 50%;
            background: radial-gradient(circle, rgba(76, 175, 80, 0.15) 0%, rgba(15, 15, 19, 0) 70%);
            filter: blur(50px);
            pointer-events: none;
            z-index: 0;
        }

        /* Progress indicator */
        .progress-container {
            display: flex;
            justify-content: space-between;
            margin-bottom: 3rem;
        }

        .progress-step {
            flex: 1;
            text-align: center;
            position: relative;
        }

        .progress-step::before {
            content: '';
            position: absolute;
            top: 10px;
            left: calc(50% + 15px);
            width: calc(100% - 30px);
            height: 2px;
            background-color: rgba(255, 255, 255, 0.1);
            z-index: 1;
        }

        .progress-step:last-child::before {
            display: none;
        }

        .step-icon {
            width: 20px;
            height: 20px;
            border-radius: 50%;
            background-color: var(--input-bg);
            border: 2px solid rgba(255, 255, 255, 0.1);
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 0.5rem;
            position: relative;
            z-index: 2;
        }

        .active .step-icon {
            background-color: var(--accent-green);
            border-color: var(--accent-green);
        }

        .step-label {
            font-size: 0.8rem;
            color: var(--text-secondary);
        }

        .active .step-label {
            color: var(--accent-green);
        }

        @media (max-width: 768px) {
            .form-container {
                margin: 2rem auto;
                padding: 1.5rem;
            }

            .form-title {
                font-size: 1.8rem;
            }
        }
    </style>
</head>
<body>
    <div class="scene" id="scene">
        <!-- Air particles will be added here by JS -->
    </div>

    <div class="glow" id="glow1"></div>
    <div class="glow" id="glow2"></div>

    <div class="container">
        <a href="#" class="back-button">
            <i class="fas fa-arrow-left"></i> Back to Products
        </a>

        <div class="form-container" id="formContainer">
            <div class="form-header">
                <div class="logo">
                    <i class="fas fa-leaf"></i> EcoFashion
                </div>
                <h1 class="form-title">Add New Product</h1>
                <p class="form-subtitle">Create a new sustainable fashion product</p>
            </div>

            <div class="progress-container">
                <div class="progress-step active">
                    <div class="step-icon"></div>
                    <div class="step-label">Details</div>
                </div>
                <div class="progress-step">
                    <div class="step-icon"></div>
                    <div class="step-label">Media</div>
                </div>
                <div class="progress-step">
                    <div class="step-icon"></div>
                    <div class="step-label">Pricing</div>
                </div>
                <div class="progress-step">
                    <div class="step-icon"></div>
                    <div class="step-label">Publish</div>
                </div>
            </div>

            <form action="/admin/products" method="POST" enctype="multipart/form-data" id="productForm">
                <div class="form-group">
                    <label for="name" class="form-label">Product Name</label>
                    <i class="form-icon fas fa-tag"></i>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter product name" required>
                </div>

                <div class="form-group">
                    <label for="material" class="form-label">Material</label>
                    <i class="form-icon fas fa-tshirt"></i>
                    <select class="form-select" id="material" name="material" required>
                        <option value="">Select Material</option>
                        <option value="cotton">Cotton</option>
                        <option value="polyester">Recycled Polyester</option>
                        <option value="wool">Organic Wool</option>
                        <option value="silk">Peace Silk</option>
                        <option value="leather">Vegan Leather</option>
                        <option value="denim">Upcycled Denim</option>
                        <option value="nylon">Regenerated Nylon</option>
                    </select>
                    <i class="select-arrow fas fa-chevron-down"></i>
                </div>

                <div class="form-group">
                    <label for="type" class="form-label">Type</label>
                    <i class="form-icon fas fa-recycle"></i>
                    <select class="form-select" id="type" name="type" required>
                        <option value="">Select Type</option>
                        <option value="recycled">Recycled</option>
                        <option value="upcycled">Upcycled</option>
                    </select>
                    <i class="select-arrow fas fa-chevron-down"></i>
                </div>

                <div class="form-group">
                    <label for="image" class="form-label">Product Image</label>
                    <div class="file-input-container">
                        <label for="image" class="file-input-label">
                            <i class="fas fa-cloud-upload-alt"></i> Choose Image
                        </label>
                        <input type="file" class="file-input" id="image" name="image" accept="image/*" required>
                    </div>
                    <div class="file-name" id="fileName">No file chosen</div>
                </div>

                <div class="form-group">
                    <label for="price" class="form-label">Price</label>
                    <div class="input-group">
                        <span class="input-group-text">â‚¹</span>
                        <input type="number" class="form-control" id="price" name="price" min="0" step="0.01" placeholder="0.00" required>
                    </div>
                </div>

                <button type="submit" class="btn-submit" id="submitBtn">
                    <i class="fas fa-plus-circle"></i> Add Product
                </button>
            </form>
        </div>
    </div>

    <script>
        // GSAP Animations
        document.addEventListener('DOMContentLoaded', function() {
            // Create air particles
            const scene = document.getElementById('scene');
            for (let i = 0; i < 30; i++) {
                createAirParticle();
            }
            
            // Create background cubes
            for (let i = 0; i < 5; i++) {
                createCube();
            }

            // Form entrance animation
            gsap.from('.form-container', {
                y: 50,
                opacity: 0,
                duration: 1,
                ease: 'power3.out'
            });

            gsap.from('.form-title', {
                y: 20,
                opacity: 0,
                duration: 0.8,
                delay: 0.3,
                ease: 'power3.out'
            });

            gsap.from('.form-subtitle', {
                y: 20,
                opacity: 0,
                duration: 0.8,
                delay: 0.5,
                ease: 'power3.out'
            });

            gsap.from('.progress-step', {
                opacity: 0,
                scale: 0.8,
                duration: 0.5,
                stagger: 0.1,
                delay: 0.7,
                ease: 'back.out'
            });

            gsap.from('.form-group', {
                y: 20,
                opacity: 0,
                duration: 0.5,
                stagger: 0.1,
                delay: 1,
                ease: 'power2.out'
            });

            gsap.from('.btn-submit', {
                y: 20,
                opacity: 0,
                duration: 0.5,
                delay: 1.5,
                ease: 'power2.out'
            });

            // Glow animations
            animateGlows();

            // File input change handler
            document.getElementById('image').addEventListener('change', function() {
                const fileName = this.files[0] ? this.files[0].name : 'No file chosen';
                document.getElementById('fileName').textContent = fileName;
                
                gsap.from('#fileName', {
                    y: 10,
                    opacity: 0,
                    duration: 0.3,
                    ease: 'power2.out'
                });
            });

            // Button hover effect
            const submitBtn = document.getElementById('submitBtn');
            submitBtn.addEventListener('mouseenter', function() {
                gsap.to(this, {
                    scale: 1.03,
                    duration: 0.3,
                    ease: 'power2.out'
                });
            });
            
            submitBtn.addEventListener('mouseleave', function() {
                gsap.to(this, {
                    scale: 1,
                    duration: 0.3,
                    ease: 'power2.out'
                });
            });

            // Form container hover effect
            const formContainer = document.getElementById('formContainer');
            formContainer.addEventListener('mouseenter', function() {
                gsap.to('.form-container', {
                    boxShadow: '0 20px 30px rgba(0, 0, 0, 0.4), 0 0 20px rgba(76, 175, 80, 0.2)',
                    duration: 0.5
                });
            });
            
            formContainer.addEventListener('mouseleave', function() {
                gsap.to('.form-container', {
                    boxShadow: '0 15px 25px rgba(0, 0, 0, 0.3)',
                    duration: 0.5
                });
            });

            
        function createAirParticle() {
            const particle = document.createElement('div');
            particle.className = 'air-particle';
            
            // Random size between 50 and 200px
            const size = Math.random() * 150 + 50;
            particle.style.width = `${size}px`;
            particle.style.height = `${size}px`;
            
            // Random starting position
            const x = Math.random() * window.innerWidth;
            const y = Math.random() * window.innerHeight;
            particle.style.left = `${x}px`;
            particle.style.top = `${y}px`;
            
            document.getElementById('scene').appendChild(particle);
            
            // Animate the particle with GSAP
            animateParticle(particle);
        }

        function animateParticle(particle) {
            // Random duration between 20 and 40 seconds
            const duration = Math.random() * 20 + 20;
            
            // Random movement direction
            const xMove = (Math.random() - 0.5) * 100;
            const yMove = (Math.random() - 0.5) * 100;
            
            gsap.to(particle, {
                x: xMove,
                y: yMove,
                opacity: Math.random() * 0.2,
                duration: duration,
                ease: 'sine.inOut',
                repeat: -1,
                yoyo: true,
                onComplete: () => {
                    // Restart the animation with new parameters
                    animateParticle(particle);
                }
            });
        }

        function createCube() {
            const cube = document.createElement('div');
            cube.className = 'cube';
            
            // Create cube faces
            const faces = ['front', 'back', 'right', 'left', 'top', 'bottom'];
            faces.forEach(face => {
                const cubeFace = document.createElement('div');
                cubeFace.className = `cube-face ${face}`;
                cube.appendChild(cubeFace);
            });
            
            // Random starting position
            const x = Math.random() * window.innerWidth;
            const y = Math.random() * window.innerHeight;
            cube.style.left = `${x}px`;
            cube.style.top = `${y}px`;
            
            document.getElementById('scene').appendChild(cube);
            
            // Animate the cube with GSAP
            animateCube(cube);
        }

        function animateCube(cube) {
            // Random rotation angles
            const rotateX = Math.random() * 360;
            const rotateY = Math.random() * 360;
            const rotateZ = Math.random() * 360;
            
            // Random duration between 30 and 60 seconds
            const duration = Math.random() * 30 + 30;
            
            gsap.to(cube, {
                rotationX: rotateX,
                rotationY: rotateY,
                rotationZ: rotateZ,
                duration: duration,
                ease: 'none',
                repeat: -1,
                onUpdate: () => {
                    // Update cube rotation
                    cube.style.transform = `rotateX(${gsap.getProperty(cube, 'rotationX')}deg) rotateY(${gsap.getProperty(cube, 'rotationY')}deg) rotateZ(${gsap.getProperty(cube, 'rotationZ')}deg)`;
                }
            });
        }

        function animateGlows() {
            const glow1 = document.getElementById('glow1');
            const glow2 = document.getElementById('glow2');
            
            // Position glows
            glow1.style.top = '20%';
            glow1.style.left = '10%';
            glow2.style.top = '70%';
            glow2.style.right = '10%';
            
            // Animate glow 1
            gsap.to(glow1, {
                x: 100,
                y: 50,
                duration: 15,
                ease: 'sine.inOut',
                repeat: -1,
                yoyo: true
            });
            
            // Animate glow 2
            gsap.to(glow2, {
                x: -100,
                y: -50,
                duration: 18,
                ease: 'sine.inOut',
                repeat: -1,
                yoyo: true
            });
        }
    </script>
</body>
</html>